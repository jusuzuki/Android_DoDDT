<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.doddt.ui.NewSongActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Song"
        android:id="@+id/newSongText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/newArtistInput"
        android:layout_below="@+id/newSongText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Artist" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/newTitleInput"
        android:layout_below="@+id/newArtistInput"
        android:layout_centerHorizontal="true"
        android:hint="Title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Song"
        android:id="@+id/addSongButton"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/newSongText"
        android:layout_alignStart="@+id/newSongText" />
</RelativeLayout>
