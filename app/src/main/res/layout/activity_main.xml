<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
    android:background="@android:color/white">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:id="@+id/galleryButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quotes"
        android:id="@+id/quotesButton"
        android:layout_above="@+id/galleryButton"
        android:layout_centerHorizontal="true"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timezone"
        android:id="@+id/timezoneButton"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/quotesButton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DoDDT - Code Review Version"
        android:id="@+id/doddtButton"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#d50f0f"
        android:layout_above="@+id/playlistButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainImage"
        android:src="@drawable/ww_small"
        android:layout_above="@+id/doddtButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Playlist"
        android:id="@+id/playlistButton"
        android:layout_above="@+id/timezoneButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
